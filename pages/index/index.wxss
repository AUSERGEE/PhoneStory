.TabBar{
  width: 100%;
  height: 116rpx;
  position: fixed;
  bottom: 0;
  z-index: 1000;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  box-shadow: 0 -4rpx 4rpx #D9D9D9;
}

.TabBar .Tab {
  width: 33%;
  height: 115rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.TabBar .Tab text{
  font-size: 22rpx;
  font-weight: bold;
  color: #9B9B9B;
}
.TabBar .Tab image{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
}
